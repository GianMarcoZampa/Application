                multiline: False

        Button:
            text: "Sign up"
            size_hint: 0.4, 0.08
            pos_hint: {"center_x":0.5, "top":0.48}
            font_size: (root.width + root.height) * 0.01
            on_release:
                root.manager.transition.direction = "left"
                root.sign_up()

        Button:
            background_color: 1, 1, 1, 0
            text: "Sign in"
            size_hint: 0.3, 0.08
            pos_hint: {"center_x":0.5, "top":0.3}
            font_size: (root.width + root.height) * 0.01
            on_press:
                color = 0, 0, 1
            on_release:
                root.manager.transition.direction = "left"
                root.sign_in()

